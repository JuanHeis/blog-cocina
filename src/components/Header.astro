---
import { SITE_TITLE } from "../consts";
---

<header style="display: flex;">
  <nav>
    <h2><a href="/blog-cocina/">{SITE_TITLE}</a></h2>
    <div class="internal-links"></div>
    <div class="social-links"></div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    min-height: 78px;
    padding: 0 1em;
    background-color: var(--background);
    box-shadow: 0 -2px 20px rgb(var(--black), 0.33);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: rgb(var(--black));
    min-width: 75px;
    text-align: center;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
